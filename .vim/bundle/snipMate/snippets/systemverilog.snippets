snippet div
	<div id="${1}">
				${2}	
	</div>
snippet for
	for (${2:i}; $2 < ${1:count}; $1++) {
		${3}
	}
snippet opt
	<option value="${1:option}">${2:$1}</option>
snippet foo
	$1bar${1:}

snippet date
	`system("date +%Y-%m-%d")`

snippet info $display
	$display("debug");
snippet info `uvm_info
	`uvm_info(get_full_name(),$sformatf("${1:value}",$1),UVM_LOW)

snippet for  for() .. 
	for(${1:int i = 0}; ${2:i <= n}; ${3:i++}) begin
	    ${4}
	end
